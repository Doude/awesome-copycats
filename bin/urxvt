#!/usr/bin/env bash

case $(xrandr --current | \
                          sed -n 's/\([^ ]*\) connected .*[0-9][0-9]*x[0-9][0-9]*+[0-9][0-9]*+[0-9][0-9]* .*/\1/p' | \
                          sort | tr '\n' ':') in
    eDP1:) font_size=8 ;;
    DPI:) font_size=6 ;;
    HDMI3:) font_size=12 ;;
    DP2:eDP1:) font_size=8 ;;
    *) font_size=8 ;;
esac

urxvt -fn "xft:DejaVu Sans Mono-${font_size},xft:DejaVu Sans Mono for Powerline-${font_size}" $@&